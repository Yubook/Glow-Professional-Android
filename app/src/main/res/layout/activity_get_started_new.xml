<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.get_started_new.GetStartedNewActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@drawable/ic_get_started_new" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relGetStarted"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:text="The app is currently under\ndevelopment.\n\nComplete your registration to be\neligible for our CLIP token airdrop."
        android:textColor="@color/app_black"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:id="@+id/relGetStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:background="@drawable/drawable_black_rounded_corner_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tvGetStarted"
                style="@style/MainBlackRoundedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_12sdp"
                android:text="I Understand"
                android:textColor="@color/app_black"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_arrow_next" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>